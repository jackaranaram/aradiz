rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para imágenes de proyectos
    match /projects/{imageId} {
      // Todos pueden leer imágenes (sitio público)
      allow read: if true;
      
      // Solo usuarios autenticados pueden subir y eliminar imágenes
      // La verificación de admin se hace en el cliente
      allow write, delete: if request.auth != null;
    }
  }
}
