rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de leads del formulario de contacto
    match /leads/{leadId} {
      // Permitir solo creación de nuevos leads (desde el formulario)
      allow create: if true;
      
      // Bloquear lectura, actualización y eliminación desde el cliente
      // Solo administradores pueden leer/editar desde Firebase Console
      allow read, update, delete: if false;
    }
    
    // Reglas para la colección de emails (MailerSend Extension)
    match /emails/{emailId} {
      // Permitir creación de documentos de email desde el cliente
      allow create: if request.resource.data.keys().hasAll(['to', 'template_id', 'personalization'])
                    && request.resource.data.to is list
                    && request.resource.data.template_id is string;
      
      // Bloquear lectura, actualización y eliminación desde el cliente
      // La extensión MailerSend tiene permisos administrativos para procesar estos documentos
      allow read, update, delete: if false;
    }
    
    // Bloquear acceso a cualquier otra colección
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
