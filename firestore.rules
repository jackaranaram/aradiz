rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Reglas para la colección de leads del formulario de contacto
    match /leads/{leadId} {
      // Permitir solo creación de nuevos leads (desde el formulario)
      allow create: if true;
      
      // Solo administradores pueden leer leads
      allow read: if isAdmin();
      
      // Solo administradores pueden actualizar o eliminar leads
      allow update, delete: if isAdmin();
    }
    
    // Reglas para la colección de emails (MailerSend Extension)
    match /emails/{emailId} {
      // Permitir creación de documentos de email desde el cliente
      allow create: if request.resource.data.keys().hasAll(['to', 'template_id', 'personalization'])
                    && request.resource.data.to is list
                    && request.resource.data.template_id is string;
      
      // Bloquear lectura, actualización y eliminación desde el cliente
      // La extensión MailerSend tiene permisos administrativos para procesar estos documentos
      allow read, update, delete: if false;
    }
    
    // Reglas para la colección de proyectos
    match /projects/{projectId} {
      // Todos pueden leer proyectos (sitio público)
      allow read: if true;
      
      // Solo administradores pueden crear, actualizar y eliminar proyectos
      allow create, update, delete: if isAdmin();
    }
    
    // Reglas para la colección de admins (lista de UIDs de administradores)
    match /admins/{userId} {
      // Los usuarios autenticados solo pueden leer su propio documento
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Solo se puede escribir desde Firebase Console
      allow write: if false;
    }
    
    // Bloquear acceso a cualquier otra colección
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
